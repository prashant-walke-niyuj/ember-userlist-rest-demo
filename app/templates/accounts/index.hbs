<div class="row">
    <div class="col-md-12">
<div class="col-md-2">
    <img height=110 width=200 class="top-nav__image" src="https://s3.amazonaws.com/rfp-logo/logo.png">
    <hr>
 <ul class="nav nav-pills nav-stacked">
    <li class="active"><a href="#">Home</a></li>
    <li><a href="/accounts">Users</a></li>
    <li><a href="#">Setting</a></li>
    <li><a href="#">Profile</a></li>
    <li><a href="#">Email Template</a></li>
    <li><a href="#">Manage Client</a></li>
</ul>
<hr>
</div>
<div class="col-md-10">
<div class="panel panel-default">
      <div class="panel-heading">
        <h2 id="user_title">Users</h2>
      </div>
  <div class="panel-body">
  
<div id="newuser" class="row user" style="display: none">
    <div class="row row col-md-12">
        <form class="" role="form">
       <div class="col-md-offset-1 col-md-5">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
        </div>
         <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
             {{input value=model.email class="form-control" id="exampleInputEmail1" placeholder="Enter email"}}
        </div>
         <div class="form-group">
            <label for="first_name">First Name</label>
             {{input value=model.first_name class="form-control" id="first_name" placeholder="Enter first name"}}
        </div>
              <div class="form-group">
            <label for="last_name">Last Name</label>
             {{input value=model.last_name class="form-control" id="last_name" placeholder="Enter last name"}}           
        </div>
         <div class="form-group">
            <label for="password">Password</label>
                {{input type="password" value=model.password class="form-control" id="password" placeholder="Enter password"}}           
        </div>
         <div class="form-group">
            <label for="c_password">Confirm Password</label>
                {{input type="password" value=model.password class="form-control" id="c_password" placeholder="Enter password"}}           
        </div>       
        <div class="checkbox">
            <label>
                {{input type="checkbox" checked=model.active class=""}}Enabled
            </label>
        </div>
        </div>
        <div class="col-md-offset-1 col-md-5">
        <div class="form-group">
            <label for="company_name">Company Name</label>
            <input type="text" class="form-control" id="company_name" name="company_name" placeholder="Enter Company Name">
        </div>
         <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
        </div>
        </div>        
        <div class="col-md-offset-1 col-md-5">
            <button type="submit" class="btn btn-success btn-lg" {{action "saveUser"}}><span class="glyphicon glyphicon-ok"></span> Submit</button>
            <button id="close_create_user" type="button" class="btn btn-deafualt btn-lg">
            Close
            </button>
        </div>        
        </form> 
    </div>
</div>
<div id="userlist" class="row userlist">
    <button id="create_user" type="button" class="btn btn-primary btn-lg">
    <span class="glyphicon glyphicon-plus"></span> Create New User
    </button>
     <div class="row col-md-12 h3 text-success">
                  <div class="col-md-1">#</div>
                  <div class="col-md-3">Username</div>
                  <div class="col-md-2">First name</div>
                  <div class="col-md-1">Last name</div>
                  <div class="col-md-3">email</div>
                  <div class="col-md-1">Status</div>
                  <div class="col-md-1"></div>
                  <hr>
                </div>
  {{#each model as |account|}}
      <div class="row col-md-12 userlist">
          <div class="col-md-1">{{account.id}}</div>
          <div class="col-md-3 username"><a href="/accounts/edit/{{account.id}}">{{account.username}}</a>
        
          </div>
          <div class="col-md-2">{{account.first_name}}</div>
          <div class="col-md-1">{{account.last_name}}</div>
          <div class="col-md-3">{{account.email}}</div>
          {{#if account.active}}
                    <div class="col-md-1 label label-success">Enabled</div>
          {{else}}
                <div class="col-md-1 label label-danger">Disabled</div>
          {{/if}}
          <div class="col-md-1 useredit"> 
              <a href="/accounts/edit/{{account.id}}"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Edit" aria-hidden="true"></span></a>
              <a href="/accounts/view/{{account.id}}"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" data-placement="top" title="View" aria-hidden="true"></span></a>
          </div>
          <hr>
      </div>
  {{/each}}
</div>
 </div>
</div>
</div>
</div>
</div>

 <script>
     $('#create_user').click(function(){
        $('#newuser').toggle('show');
        $('#userlist').toggle('hide');
        $('#user_title').html('Create New User');
     });
     $('#close_create_user').click(function(){
        $('#newuser').toggle('hide');
        $('#userlist').toggle('show');
         $('#user_title').html('Users');
     });
 </script>